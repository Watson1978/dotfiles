autodetach on
escape ^Tt
vbell off
startup_message off
caption always "%{= wk} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wb}%y/%m/%d %{=b wb}%c"
bell_msg "^G"
defkanji utf-8
defencoding utf-8
encoding utf-8 utf-8
defscrollback 10000
bind c screen
bind p prev
bind n next

bind -c REGION 3 split -v
bind -c REGION 2 split
bind -c REGION 1 only
bind -c REGION 0 remove
bind -c REGION o focus
bind -c REGION } resize +10
bind -c REGION { resize -10

bind x command -c REGION
